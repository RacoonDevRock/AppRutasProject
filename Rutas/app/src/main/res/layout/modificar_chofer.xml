<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context="ComplementosInterfaz.administrador.Choferes.modificarChofer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/tituloGestionChofer"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnAtras"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/baseline_arrow_back_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Gestión de Choferes"
                    android:textColor="#70AD47"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#70AD47" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tituloGestionChofer"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:padding="15dp"
                    android:text="MODIFICAR CHOFER"
                    android:textColor="#7F7F7F"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="310dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_edittext"
                    android:textColor="#000000"
                    android:textColorHint="#8E8E8E"
                    android:text="26587495"
                    android:padding="10dp"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="310dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_edittext"
                    android:textColor="#000000"
                    android:textColorHint="#8E8E8E"
                    android:text="Gerald Rambo"
                    android:padding="10dp"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="310dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#8E8E8E"
                    android:background="@drawable/background_edittext"
                    android:text="Arnold Quispe"
                    android:padding="10dp"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="310dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#8E8E8E"
                    android:background="@drawable/background_edittext"
                    android:text="T84621937"
                    android:padding="10dp"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/clase_Categoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="#000000"
                        android:text="Clase-Categoría:"
                        android:textSize="17sp" />

                    <RadioGroup
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_toEndOf="@id/clase_Categoria"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/clase_Categoria"
                        android:layout_height="wrap_content" >

                        <RadioButton
                            android:id="@+id/marcador_cat1"
                            android:layout_width="wrap_content"
                            android:checked="true"
                            android:buttonTint="#000000"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:text="A-IIIa" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A-IIIa"
                            android:buttonTint="#000000"
                            android:textColor="#000000"
                            android:layout_marginLeft="10dp"/>

                    </RadioGroup>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="270dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#70AD47" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginVertical="10dp"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="#70AD47"
                        android:padding="15dp"
                        android:text="Restaurar todo"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnGuardarChoferModificado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginVertical="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="#ED7D31"
                        android:padding="15dp"
                        android:text="Guardar"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>