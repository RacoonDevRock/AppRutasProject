                        android:layout_marginLeft="20dp"
                        android:layout_toEndOf="@id/letraLVIcon"
                        android:gravity="center_vertical"
                        android:text="Horario Salida del Primer Bus: 9:54 PM"
                        android:textColor="#000000"
                        android:layout_toRightOf="@id/letraLVIcon" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toEndOf="@id/letraLVIcon"
                        android:gravity="center_vertical"
                        android:background="#7F7F7F"
                        android:layout_toRightOf="@id/letraLVIcon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="50dp"
                        android:layout_toEndOf="@id/letraLVIcon"
                        android:gravity="center_vertical"
                        android:text="Frecuencia: 10 minutos"
                        android:textColor="#000000"
                        android:layout_toRightOf="@id/letraLVIcon" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingStart="9dp"
                    android:paddingEnd="9dp"
                    android:paddingBottom="9dp"
                    android:paddingTop="15dp"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="60dp"
                        android:id="@+id/letraBCIcon"
                        android:layout_height="60dp"
                        android:background="@drawable/imagen4"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/textBCinfo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_toEndOf="@id/letraBCIcon"
                        android:gravity="center_vertical"
                        android:text="Horario Salida del Primer Bus: 5:00 AM"
                        android:textColor="#000000"
                        android:layout_toRightOf="@id/letraBCIcon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/textBCinfo"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toEndOf="@id/letraBCIcon"
                        android:gravity="center_vertical"
                        android:text="Horario Salida del Primer Bus: 9:54 PM"
                        android:textColor="#000000"
                        android:layout_toRightOf="@id/letraBCIcon" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toEndOf="@id/letraBCIcon"
                        android:gravity="center_vertical"
                        android:background="#7F7F7F"
