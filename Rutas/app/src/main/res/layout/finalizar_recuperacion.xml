<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ComplementosInterfaz.Compartido.Inicio.FinalizarRecuperacion">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/_33_64_ej"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@null" />

    <View
        android:id="@+id/ventanaSesion"
        android:layout_width="wrap_content"
        android:layout_height="620dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tituloSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuperación de contraseña"
        android:gravity="center"
        android:textColor="#7CB342"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/ventanaSesion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="130dp"/>

    <TextView
        android:id="@+id/textoSesion"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Listo, ahora sí escribe una nueva contraseña para que puedas disfrutar de las funcionalidades de la App"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/tituloSesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etNuevaContrasena"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Ingresa nueva contraseña"
        android:textColor="#000000"
        android:backgroundTint="#8E8E8E"
        android:textColorHint="#8E8E8E"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/textoSesion"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etValidaNuevaContrasena"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Validar nueva contraseña"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/etNuevaContrasena"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#000000"
        android:backgroundTint="#8E8E8E"
        android:textColorHint="#8E8E8E"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnGuardarCambioContrasena"
        android:layout_width="wrap_content"
        android:background="@drawable/custom_button"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Guardar"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/etValidaNuevaContrasena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>