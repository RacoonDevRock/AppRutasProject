<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".PasajeroRegistro">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/_33_64_ej"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:contentDescription="@null" />

    <View
        android:id="@+id/ventanaRegistro"
        android:layout_width="wrap_content"
        android:layout_height="620dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tituloRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear cuenta"
        android:textColor="#7CB342"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ventanaRegistro"
        app:layout_constraintEnd_toEndOf="@id/ventanaRegistro"
        app:layout_constraintStart_toStartOf="@id/ventanaRegistro"
        app:layout_constraintTop_toTopOf="@id/ventanaRegistro"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textoRegistro"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="450dp"
        android:gravity="center_horizontal"
        android:text="Crea tu cuenta para empezar a consultar rutas y todo lo relacionado con tus viajes en Nueva California S.A"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ventanaRegistro"
        app:layout_constraintEnd_toEndOf="@id/ventanaRegistro"
        app:layout_constraintStart_toStartOf="@id/ventanaRegistro"
        app:layout_constraintTop_toBottomOf="@id/tituloRegistro" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu nombre"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/ventanaRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoRegistro"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/etApellido"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu apellido"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/btnCrearcuentaRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNombre"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/etCorreoRegistro"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Ingresa tu correo"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/ventanaRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etApellido"
        app:layout_constraintVertical_bias="0.13" />

    <EditText
        android:id="@+id/etContrase単aRegistro"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:hint="Ingresa contrase単a"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/ventanaRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etCorreoRegistro"
        app:layout_constraintVertical_bias="0.06" />

    <EditText
        android:id="@+id/etValidacionRegistro"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:hint="Validar contrase単a"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/btnCrearcuentaRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etContrase単aRegistro"
        app:layout_constraintVertical_bias="0.3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCrearcuentaRegistro"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="Crear cuenta"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@id/ventanaRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ventanaRegistro"
        app:layout_constraintVertical_bias="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>